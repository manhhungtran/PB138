@model IEnumerable<P_Layer.Models.PersonModel>
<p>
    <a href="@Url.Action("Create")">
        <input type="submit" class="button" value="Create New"/>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            Sex
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeathDate)
        </th>
        <th>
            Mother
        </th>
        <th>
            Father
        </th>
        <th>
            Partner
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeathDate)
            </td>
            <td>
                @if (item.MotherId != null)
                {
                    @Html.ActionLink("Mother", "Details", new { id = item.MotherId })
                }
            </td>
            <td>
                @if (item.FatherId != null)
                {
                    @Html.ActionLink("Father", "Details", new { id = item.FatherId })
                }
            </td>
            <td>
                @if (item.PartnerId != null)
                {
                    @Html.ActionLink("Parther", "Details", new { id = item.PartnerId })
                }
            </td>
            <td>
                <a href="@Url.Action("Edit", new {id = item.Id})"><input type="submit" class="button" value="Edit" /></a>
            </td>
            <td>
                <a href="@Url.Action("Details", new {id = item.Id})"><input type="submit" class="button" value="Detail" /></a
            </td>
            <td>
                <a href="@Url.Action("Delete", new {id = item.Id})"><input type="submit" class="button" value="Delete" /></a></td>
        </tr>
    }
</table>
