@using P_Layer.Models
@model LoginViewModel
@{
    Layout = "../Shared/_LayoutNoAuth.cshtml";
    ViewBag.Title = "Log in";
}
    
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "prihlaseni", role = "form" }))
    {
    @Html.ValidationSummary(false, "", new { @class = "error_msg" })<br/>
    
        @Html.AntiForgeryToken()
        @Html.LabelFor(m => m.UserName, new { @type = "Email" })
        @Html.TextBoxFor(m => m.UserName)

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)

        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
        <input type="submit" value="Log in" class="button" />

        <p>
            @Html.ActionLink("Register as a new user", "Register")
        </p>

        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>
    }