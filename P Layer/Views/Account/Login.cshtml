@using P_Layer.Models
@model LoginViewModel
@{
    Layout = "../Shared/_LayoutNoAuth.cshtml";
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "prihlaseni", role = "form" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })<br/>
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error_msg" })<br />
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error_msg" })<br />
    <br/><br /><br /><br />
    @Html.AntiForgeryToken()
    @Html.LabelFor(m => m.Email, new { @type = "Email" })
    @Html.TextBoxFor(m => m.Email)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    @Html.CheckBoxFor(m => m.RememberMe)
    @Html.LabelFor(m => m.RememberMe)
    <input type="submit" value="Log in" class="button" />
    
    
    <p>
        @Html.ActionLink("Register as a new user", "Register")
    </p>
